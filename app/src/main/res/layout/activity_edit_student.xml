<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raj.classtodo.ui.EditStudent"
    android:background="@color/colorBackground">


    <Button
        android:text="Add"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="45dp"
        android:id="@+id/buttonAddStudent"
        android:onClick="goTeacher"
        android:background="@color/buttonColor"
        android:textColor="@color/textColor"
        android:padding="5dp"
        android:layout_below="@+id/editStudentMobile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editStudentName"
        android:text=""
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editStudentId"
        android:text=""
        android:layout_marginTop="23dp"
        android:layout_below="@+id/editStudentName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editStudentMobile"
        android:text=""
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editStudentId"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/editStudentMobile"
        android:layout_toStartOf="@+id/editStudentMobile"
        android:layout_alignTop="@+id/editStudentMobile"
        android:layout_alignBottom="@+id/editStudentMobile" />

    <TextView
        android:text="ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/editStudentId"
        android:layout_toStartOf="@+id/editStudentId"
        android:layout_alignTop="@+id/editStudentId"
        android:layout_alignBottom="@+id/editStudentId"  />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/editStudentName"
        android:layout_toStartOf="@+id/editStudentName"
        android:layout_alignTop="@+id/editStudentName"
        android:layout_alignBottom="@+id/editStudentName" />

    <Button
        android:text="view all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonViewAll"
        android:layout_alignBaseline="@+id/buttonDrop"
        android:layout_alignBottom="@+id/buttonDrop"
        android:layout_toRightOf="@+id/buttonDrop"
        android:layout_toEndOf="@+id/buttonDrop" />

    <Button
        android:text="drop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDrop"
        android:layout_below="@+id/buttonAddStudent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/todayDate"
        android:layout_alignBaseline="@+id/buttonViewAll"
        android:layout_alignBottom="@+id/buttonViewAll"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/buttonViewAll"
        android:layout_toLeftOf="@+id/todayDate"
        android:layout_toStartOf="@+id/todayDate"
        android:id="@+id/deleteID" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDelete"
        android:layout_below="@+id/deleteID"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />


</RelativeLayout>
