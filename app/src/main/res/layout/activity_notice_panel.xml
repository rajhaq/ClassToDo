<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notice_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raj.classtodo.ui.noticePanel"
    android:background="@color/colorBackground">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/noticeInput"
        android:textColorLink="@color/buttonColor" />


    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/addNoticeButton"
        android:onClick="addNoticeClicked"
        android:layout_below="@+id/noticeInput"
        android:layout_alignLeft="@+id/noticeInput"
        android:layout_alignStart="@+id/noticeInput" />
    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/addNoticeButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/deleteNoticeButton"
        android:onClick="deleteNoticeClicked" />

    <TextView
        android:text="ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:layout_below="@id/addNoticeButton"
        android:id="@+id/noticeID" />
    <TextView
        android:text="Notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addNoticeButton"
        android:paddingTop="40dp"
        android:paddingLeft="90dp"
        android:id="@+id/noticeNotice" />
    <TextView
        android:text="Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_below="@id/noticeID"
        android:id="@+id/noticeNumberText" />
    <TextView
        android:text="Log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noticeNotice"
        android:paddingTop="10dp"
        android:paddingLeft="90dp"
        android:id="@+id/noticeLogText" />
<!--
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/noticeLogText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/noticeList" />-->


</RelativeLayout>
