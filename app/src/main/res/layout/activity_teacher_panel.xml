    <Button
        android:text="Start Today"
        android:textSize="40dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/startButton"
        android:elevation="0dp"
        android:onClick="goStartToday"
        android:background="@color/buttonColor"
        android:textColor="@color/textColor"
        android:padding="5dp"

        android:layout_marginTop="28dp"
        android:layout_below="@+id/dLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
    android:text="Attendance List"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:id="@+id/PDF"
    android:onClick="goPDF"
    android:background="@color/buttonColor"
    android:textColor="@color/textColor"
        android:layout_below="@+id/startButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp" />

    <Button
        android:text="Student Panel"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/editButton"
        android:onClick="goEdit"
        android:background="@color/buttonColor"
        android:textColor="@color/textColor"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/PDF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
    android:text="Databasse Panel"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:id="@+id/editDatabase"
    android:onClick="goDB"
    android:background="@color/buttonColor"
    android:textColor="@color/textColor"
    android:layout_marginTop="14dp"
    android:layout_below="@+id/editButton"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />


</RelativeLayout>
