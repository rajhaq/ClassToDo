<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.raj.classtodo">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".ui.teacherPanel"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.studentPanel"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.patentsPanel"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TeacherLoginActivity"
            android:label="@string/title_activity_teacher_login"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.raj.classtodo.MainActivity" />
        </activity>
        <activity
            android:name=".ui.Today"
            android:parentActivityName=".ui.teacherPanel" />
        <activity
            android:name=".ui.noticePanel"
            android:parentActivityName=".ui.teacherPanel" />
        <activity android:name=".ui.EditStudent" />
        <activity android:name=".ui.AddToday" />
        <activity
            android:name=".ui.DetailActivity"
            android:parentActivityName=".ui.AddToday" />
        <activity android:name=".Pdf" />
        <activity android:name=".ui.Sms"></activity>
    </application>

</manifest>